{
  "name": "kanban-board",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "npm run clean",
    "build": "next build",
    "prebuild:cloudflare": "npm run clean",
    "build:cloudflare": "npx -y @opennextjs/cloudflare@latest build",
    "validate:cloudflare": "npm run build && npm run build:cloudflare",
    "deploy:cloudflare": "npx wrangler deploy",
    "start": "next start",
    "lint": "next lint",
    "clean": "node -e \"const fs=require('fs'); ['.next', '.open-next'].forEach(d=>fs.existsSync(d)&&fs.rmSync(d,{recursive:true,force:true})); console.log('Cleaned build folders')\"",
    "clean:full": "npm run clean && node -e \"const {execSync}=require('child_process'); try{execSync('taskkill /F /IM node.exe',{stdio:'ignore'})}catch{}; console.log('Killed all Node processes')\"",
    "restart": "npm run clean:full && npm run dev"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.89.0",
    "clsx": "^2.1.1",
    "driver.js": "^1.4.0",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.562.0",
    "next": "^15.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^3.6.0",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "eslint": "^9",
    "eslint-config-next": "^15.1.3",
    "postcss": "^8.4.49",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5",
    "wrangler": "^3.0.0"
  }
}
